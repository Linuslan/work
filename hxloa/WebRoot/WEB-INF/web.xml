<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:config/applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>
  		org.springframework.web.context.ContextLoaderListener
  	</listener-class>
  </listener>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:config/log4j.properties</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>ValidateImageServlet</servlet-name>
    <servlet-class>com.linuslan.oa.servlet.ValidateImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ValidateImageServlet</servlet-name>
    <url-pattern>/validateImageServlet.valid</url-pattern>
  </servlet-mapping>
  <servlet>
  	<description>Comet连接[默认:org.comet4j.core.CometServlet]</description>
  	<display-name>CometServlet</display-name>
  	<servlet-name>CometServlet</servlet-name>
  	<servlet-class>org.comet4j.core.CometServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CometServlet</servlet-name>
  	<url-pattern>/conn</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ConnectId</servlet-name>
  	<servlet-class>com.linuslan.oa.servlet.ReceiveConnectIdServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ConnectId</servlet-name>
  	<url-pattern>/receiveConnectId</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>
    	com.linuslan.oa.filter.LoginFilter
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>
        org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter     
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>/s</taglib-uri>
      <taglib-location>/WEB-INF/struts-tags.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/c</taglib-uri>
      <taglib-location>/WEB-INF/c.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/fmt</taglib-uri>
      <taglib-location>/WEB-INF/fmt.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/fn</taglib-uri>
      <taglib-location>/WEB-INF/fn.tld</taglib-location>
    </taglib>
  </jsp-config>
  
  <listener>
  	<description>Comet4J容器侦听</description>
  	<listener-class>org.comet4j.core.CometAppListener</listener-class>
  </listener>
  <listener>
  	<description>Message</description>
  	<listener-class>com.linuslan.oa.listener.MessageServletListener</listener-class>
  </listener>
  <listener>
  	<description>session</description>
  	<listener-class>com.linuslan.oa.listener.SessionListener</listener-class>
  </listener>
  
</web-app>